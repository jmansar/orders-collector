{
  "ConnectionStrings": {
    "AppDb": "Data Source=db.sqlite3"
  },
  "MicrosoftAppId": "",
  "MicrosoftAppPassword": "",
  "BotId": "",
  "AllowedConversations": null,
  "Serilog": {
    "Using": [ "Serilog.Sinks.RollingFile", "Serilog.Sinks.ColoredConsole" ],
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": { "pathFormat": "logs/log-{Date}.txt" }
      },
      {
        "Name": "ColoredConsole"
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
